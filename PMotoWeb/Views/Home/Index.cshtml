@{
    ViewBag.Title = "Data MotoGP";
}
@model PMotoWeb.ViewModels.HomeViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-8">
            <h3>MotoGP Results, Stats and Data visualization</h3>
            <ul>
                <li>Race - Compare the best laps: @Html.ActionLink("Last Race", "Index", "GpResults", new { id = Model.ListGps.First().GpId }, null)</li>
                <li>Race - Filter times by used tyres: @Html.ActionLink("Last Race", "Index", "GpResults", new { id = Model.ListGps.First().GpId }, null)</li>
                <!--<li>Display and filter all sessions: @Html.ActionLink(" All Sessions", "Index", "AllSessions")</li>-->
                <li>Replay races lap by lap: @Html.ActionLink("Replay", "Replay", "Home")</li>
                <li>Season - Analysis by Session: @Html.ActionLink("Season stats", "Index", "MotoStats")</li>
                <li>Season - Analysis by Laps: @Html.ActionLink("Races stats", "HoleshotStats", "MotoStats")</li>
            </ul>
        </div>
        <div class="col-3 col-md-1">
            <!--float-right ml-auto-->
            <!--class="table table-striped table-hover table-sm table-condensed sortable">-->
            <table id="tableListGp" class="table table-striped table-hover table-sm w-25">
                <thead>
                    <tr><th colspan="3">Last Results</th></tr>
                </thead>
                <tbody class="border">
                    @foreach (var item in Model.ListGps)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(item.getLabel(7), "Index", "GpResults", new { id = item.GpId, @class = "badge badge-info"}, null)
                            </td>
                            <td>
                                <span class="badge badge-@item.Season.Category">
                                    @Html.DisplayFor(p => item.Season.Category)
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
