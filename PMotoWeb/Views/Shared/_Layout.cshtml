<!DOCTYPE html>
<html>
<head>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-DGM900CR14"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-07E56Y6XVN');
    </script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="MotoGP, Moto, sport, stats, results, data, visualization" />
    <meta name="description" content="Results, Stats and Data visualization for MotoGP" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("DataMotoGP.eu", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav mr-auto">
                    <li class="nav-item">@Html.ActionLink("Last Races", "Index", "LastGps", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("All Sessions", "Index", "AllSessions", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Season Stats", "Index", "MotoStats", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Race Stats", "HoleshotStats", "MotoStats", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Replay Race", "Replay", "Home", null, new { @class = "nav-link" })</li>
                </ul>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item align-content-end">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>
                </ul>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav ml-auto">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">@Html.ActionLink("Login", "Login", "Users", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Register", "Create", "Users", null, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        <li class="nav-item">@Html.ActionLink("My Account", "Edit/" + User.Identity.Name, "Users", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Logout", "Logout", "Users", null, new { @class = "nav-link" })</li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <!--2nd navbar
    <nav class="navbar navbar-expand-lg navbar-light bg-info border">
        <div class="container">
            <div class="navbar-collapse collapse w-100 border">
                <ul class="nav navbar-nav mr-auto">
                    <li class="nav-item border">@Html.ActionLink("Portimao MotoGP Sessions", "Index", "GpResults", null, new { @id = 15, @class = "nav-link" })</li>
                    <li class="nav-item border">@Html.ActionLink("Portimao Moto2 Sessions", "Index", "GpResults", null, new { @id = 14, @class = "nav-link" })</li>
                    <li class="nav-item border">@Html.ActionLink("Portimao Moto3 Sessions", "Index", "GpResults", null, new { @id = 13, @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    -->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; DataMotoGP.eu @DateTime.Now.Year - @ViewBag.Title</p>
            <p>Source Data from © DORNA, 2020</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.js")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/bootstrap-table")
    @RenderSection("scripts", required: false)
</body>
</html>
